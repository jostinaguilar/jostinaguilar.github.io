---
import Logo from "./Logo.astro";
import MoonIcon from "./MoonIcon.astro";
import GitHubIcon from "./GitHubIcon.astro";
import LinkedInIcon from "./LinkedInIcon.astro";
---

<header class="w-full py-10">
  <nav class="w-full flex max-w-screen-lg justify-between m-auto">
    <div class="w-4 h-auto">
      <a href="/">
        <Logo />
      </a>
    </div>
    <div class="flex gap-6">
      <a href="#">Home</a>
      <a href="#">Proyectos</a>
      <a href="#">Mi Stack</a>
    </div>
    <div>
      <button class="w-6">
        <MoonIcon />
      </button>
    </div>
  </nav>
  <section
    class="max-w-screen-lg m-auto flex items-center flex-col py-20 gap-8"
  >
    <div class="flex items-center flex-col gap-4">
      <h1 class="text-5xl font-black">Jostin Aguilar</h1>
      <p class="text-neutral-200 text-lg">
        Soy peruano y por las noches Desarrollador Web.
      </p>
    </div>
    <button
      class="flex gap-3 items-center justify-center text-sm border py-2 px-4 border-slate-600 rounded-lg"
    >
      <span class="block w-2 h-2 rounded-full bg-green-500"></span>
      Disponible para nuevos desaf√≠os
    </button>
    <div class="flex gap-10">
      <a href="#" class="flex items-center gap-3">
        <GitHubIcon />
        GitHub</a
      >
      <a href="#" class="flex items-center gap-3">
        <LinkedInIcon />
        LinkedIn</a
      >
    </div>
  </section>
</header>
