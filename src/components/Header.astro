---
import { Image } from "astro:assets";
import SocialIcon from "./SocialIcon.astro";
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import Twitter from "./icons/Twitter.astro";
---

<header class="my-16 w-full max-w-4xl mx-auto px-6 py-4">
    <div class="border border-neutral-50/10 p-0.5 size-14 rounded-full mb-4">
        <Image
            src="https://avatars.githubusercontent.com/u/84819925?v=4"
            alt="Avatar de Jostin Aguilar"
            class="object-cover size-full rounded-full"
            width={64}
            height={64}
            loading="eager"
        />
    </div>
    <div class="flex flex-col gap-1 mb-4">
        <h1 class="font-bold text-2xl text-foreground">Jostin Aguilar</h1>
        <p class="text-foreground/80 font-light text-base">
            Desarrollo Web & Soporte TI.
        </p>
    </div>
    <div
        class="flex gap-2 items-center border px-2.5 py-1.5 rounded-md border-zinc-800 w-max"
    >
        <div class="relative flex items-center justify-center">
            <span
                class="size-2 absolute bg-lime-500 -z-10 opacity-75 animate-ping rounded-full block"
            ></span>
            <span class="size-1.5 bg-lime-500 rounded-full block"></span>
        </div>
        <span class="text-foreground text-xs font-medium">
            Disponible para nuevos proyectos</span
        >
    </div>
    <div class="flex gap-6 mt-6">
        <SocialIcon name="GitHub" href="https://github.com/jostinaguilar">
            <GitHub />
        </SocialIcon>
        <SocialIcon
            name="LinkedIn"
            href="https://www.linkedin.com/in/jostinaguilar"
        >
            <LinkedIn />
        </SocialIcon>
        <SocialIcon name="Twitter" href="https://x.com/jostinaaguilar">
            <Twitter />
        </SocialIcon>
    </div>
</header>
