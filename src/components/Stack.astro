---
const { href, src, alt, style } = Astro.props;
---

<a
    href={href}
    class="bg-neutral-600/10 bg p-2 border border-neutral-600/20 aspect-square size-12 rounded-md stack relative inline-flex"
    style={style}
>
    <img src={src} alt={alt} class="size-full" />
</a>

<style scoped>
    .stack::after {
        background-color: var(--glow-color);
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 1.5rem;
        height: 1.5rem;
        z-index: -1;
        border-radius: 100%;
        filter: blur(10px) saturate(150%);
        opacity: 0.5;
        transition: all 2s ease;
    }
    .stack:hover::after {
        opacity: 0.8;
        scale: 1.2;
    }
</style>
