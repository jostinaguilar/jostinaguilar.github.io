---
import HtmlIcon from "./icons/Html.astro";
import CssIcon from "./icons/Css.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import PhpIcon from "./icons/Php.astro";
import LaravelIcon from "./icons/Laravel.astro";
import StackCard from "./StackCard.astro";
---

<div class="scroll w-full overflow-y-scroll mt-4">
  <div class="flex flex-col gap-2 pr-2">
    <StackCard>
      <HtmlIcon
        class="size-6 transition duration-300 ease-in text-black dark:text-white"
      />
      HTML
    </StackCard>
    <StackCard>
      <CssIcon class="size-6 transition duration-300 ease-in" />
    </StackCard>
    <StackCard>
      <JavaScriptIcon class="size-6 transition duration-300 ease-in" />
    </StackCard>
    <StackCard>
      <PhpIcon
        class="size-6 transition duration-300 ease-in text-black dark:text-white"
      />
    </StackCard>
    <StackCard>
      <LaravelIcon class="size-6 transition duration-300 ease-in" />
    </StackCard>
  </div>
</div>

<style>
  .scroll::-webkit-scrollbar {
    width: 6px;
    height: auto;
  }
  .scroll::-webkit-scrollbar-thumb {
    background-color: #4d4d4d;
    border-radius: 3px;
  }
  .scroll::-webkit-scrollbar-track {
    background-color: rgba(241, 241, 241, 0.1);
    border-radius: 3px;
  }
  /* .scroll {
    mask: linear-gradient(180deg, rgba(0, 0, 0, 1) 90%, rgba(0, 0, 0, 0) 100%);
  } */
</style>
