---
import "@fontsource/mulish/200.css";
import "@fontsource/mulish/300.css";
import "@fontsource/mulish/400.css";
import "@fontsource/mulish/500.css";
import "@fontsource/mulish/600.css";
import "@fontsource/mulish/700.css";
import "@fontsource/mulish/800.css";
import "@fontsource/mulish/900.css";

import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Jostin Aguilar</title>
  </head>
  <body
    class="bg-white dark:bg-black antialiased w-full grid place-content-center"
  >
    <div class="glow">
      <div class="glow-top"></div>
      <div class="glow-layers">
        <div class="glow-layer-primary"></div>
        <div class="glow-layer-secondary"></div>
        <div class="glow-layer-tertiary"></div>
      </div>
    </div>
    <slot />
  </body>
</html>
<style>
  html,
  body {
    font-family: "Mulish", sans-serif;
    color: #fff;
    margin: 0;
    width: 100%;
    min-height: 100dvh;
    scroll-behavior: smooth;
  }
  .glow {
    position: absolute;
    width: 100%;
    height: 100dvh;
    top: 0;
    overflow: hidden;
    z-index: -5;
  }
  .glow-top {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    background: radial-gradient(
      40% 50% at 50% 0%,
      hsla(204, 100%, 50%, 0.5) 0%,
      hsla(204, 100%, 50%, 0.25) 30%,
      hsla(0, 0%, 0%, 0) 100%
    );
  }
  .glow-layers {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    background: radial-gradient(
      62% 75% at 50% 45%,
      rgba(0, 85, 255, 0) 0%,
      rgba(0, 85, 255, 0) 30%,
      rgba(0, 85, 255, 0) 55%,
      rgba(0, 85, 255, 0.25) 80%,
      rgba(0, 85, 255, 1) 100%
    );
    mask: linear-gradient(360deg, rgba(0, 0, 0, 0) 30%, rgba(0, 0, 0, 1) 100%);
    overflow: hidden;
  }
  .glow-layer-primary {
    width: 100%;
    height: 290px;
    position: absolute;
    top: 0;
    background: radial-gradient(
      50% 32% at 50% 0%,
      #009dff 0%,
      rgba(0, 119, 255, 0.15) 79%,
      rgba(0, 178, 255, 0) 100%
    );
    z-index: 3;
  }
  .glow-layer-secondary {
    width: 100%;
    position: absolute;
    inset: 0 0 108px 0;
    background: linear-gradient(
      360deg,
      rgba(0, 153, 255, 0) 0%,
      rgb(0, 178, 255) 100%
    );
    mask: radial-gradient(
        73% 93% at 48.5% 40.300000000000004%,
        rgba(0, 0, 0, 0.1) 0%,
        rgba(0, 0, 0, 0.3) 64%,
        rgba(0, 0, 0, 1) 100%
      )
      add;
    z-index: 2;
  }
  .glow-layer-tertiary {
    width: 100%;
    background: linear-gradient(
      360deg,
      rgba(0, 85, 255, 0) 0%,
      rgba(8, 0, 255, 0.7) 100%
    );
    inset: 0 0 208px 0;
    mask: radial-gradient(
        50% 131% at 49% 31.8%,
        rgba(0, 0, 0, 0.5) 0%,
        rgba(0, 0, 0, 0.32556) 64%,
        rgba(0, 0, 0, 1) 100%
      )
      add;
    position: absolute;
    z-index: 0;
  }
</style>
