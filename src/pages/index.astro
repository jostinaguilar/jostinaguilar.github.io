---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Navbar from "../components/Navbar.astro";
import Projects from "../components/Projects.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Navbar />
  <main class="w-full mx-auto max-w-screen-lg">
    <div class="grid grid-cols-8 grid-rows-7 z-10 gap-4">
      <div class="rounded-md col-span-4 row-span-5 bg-black/10">
        <Header />
      </div>
      <div class="rounded-md col-span-2 row-span-4 bg-black/10">2</div>
      <div class="rounded-md col-span-2 row-span-3 bg-black/10">3</div>
      <div class="rounded-md col-span-2 bg-black/10">4</div>
      <div class="rounded-md col-span-4 row-span-3 bg-black/10">5</div>
      <div class="rounded-md col-span-4 row-span-2 bg-black/10">6</div>
    </div>
  </main>
  <Footer />
</Layout>
